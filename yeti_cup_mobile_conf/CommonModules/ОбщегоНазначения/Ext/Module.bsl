Функция ПреобразоватьТелефонДляПоиска(Телефон) Экспорт
	
	Результат	= "";
	
	Цифры		= "0123456789";
	
	Для Индех = 1 По СтрДлина(Телефон) Цикл
		
		Симбол	= Сред(Телефон, Индех, 1);
		
		Если Не СтрНайти(Цифры, Симбол) = 0 Тогда
			
			Результат	= Результат + Симбол;
			
		КонецЕсли;
		
	КонецЦикла;
	
	Возврат Результат;
	
КонецФункции